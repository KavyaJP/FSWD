<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Display Product</title>
  </head>
  <body>
    <table border="1">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Details</th>
        <th>Stock</th>
        <th>Actions</th>
      </tr>
      <% for(var i = 0; i < mydata.length; i++){ %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= mydata[i].pname %></td>
        <td><%= mydata[i].pprice %></td>
        <td><%= mydata[i].pdetails %></td>
        <td><%= mydata[i].pstock %></td>
        <td>
          <a href="/edit-product/<%= mydata[i]._id %>">Edit</a>|<a
            href="/delete-product/<%= mydata[i]._id %>"
            onclick="return confirm('Are you Sure')"
            >Delete</a
          >
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
